@model PEMinutes.ViewModels.TeacherIndexViewModel

@{
    ViewBag.Title = "Dashboard";
}


@if (Request.IsAuthenticated)
{
    @Html.Partial("~/Views/Shared/_TeacherSidebar.cshtml")

}
<div class="main-panel">
    @if (Request.IsAuthenticated)
    {
        @Html.Partial("~/Views/Shared/_TeacherTopNav.cshtml")
    }
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-2 col-sm-12">
                    
                    <div class="card">
                        <div class="content">
                            <div class="row">
                                <div class="col-xs-4">
                                    <div class="icon-big icon-warning text-center">
                                        <i class="ti-clipboard"></i>
                                    </div>
                                </div>
                                <div class="col-xs-7">
                                    <div class="numbers">
                                        <p>Ten Day Minutes Total</p>
                                        @Model.Minutes  @*This will display the current weeks minutes for the logged in user*@
                                    </div>
                                </div>
                            </div>
                            <div class="footer">
                                    <hr />
                                    <div class="stats">
                                        <i class="ti-calendar"></i> @Html.ActionLink("View All Minutes", "Manage", "Teacher")
                                    </div>
                                </div>
                        </div>
                    </div>
                    <div class="card">
                        <div class="content">
                            <div class="row">
                                <div class="col-xs-4">
                                    <div class="icon-big icon-success text-center">
                                        <i class="ti-pencil-alt2"></i>
                                    </div>
                                </div>
                                <div class="col-xs-7">
                                    <div class="numbers">
                                        <p>Sub Approvals</p>
                                        @ViewBag.NeedsApproval @*This will display the minutes needing approvals*@
                                    </div>
                                </div>
                            </div>
                            <div class="footer">
                                <hr />
                                <div class="stats">
                                    <i class="ti-calendar"></i> @Html.ActionLink("View All Sub Approvals", "Approve", "Teacher")
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-12 col-md-12 col-lg-10">
                    <div class="card">
                        <div class="header">
                            <h4 class="title">Overview</h4>
                            <p class="category">Minutes over the last ten school days</p>
                        </div>
                        <div class="content">
                            <div class="ct-chart"></div> @*The graph of the last 2 weeks minutes*@
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script>
        $(document).ready(function () {
            // building the 'data' variable
            var data = {
                // A labels to display the last two weeks of dates
                labels: @Html.Raw(Json.Encode(Model.MinCount.Select(x => x.Date))),
                // Our series array that contains the minutes
                // for the teacher over the last two weeks
                series: [@Html.Raw(Json.Encode(Model.MinCount.Select(x=>x.Minutes)))]
            }

            // Create a new line chart object where as first parameter we pass in a selector
            // that is resolving to our chart container element. The Second parameter
            // is the actual 'data' object.
            new Chartist.Bar('.ct-chart', data);
        });
    </script>

<script>jQuery('#Dashboard').addClass('active');</script>
}
