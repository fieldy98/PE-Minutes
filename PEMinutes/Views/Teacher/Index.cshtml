@model IEnumerable<PEMinutes.EF.EnteredPeMinute>

@{
    ViewBag.Title = "Teacher Homepage";
}
<div class="col-sm-12">
    <div class="col-sm-3">
        <h2>@ViewBag.Name </h2>
    </div>
    <div class="col-sm-9 pull-right">
        <h2>@ViewBag.School</h2>
    </div>
</div>

<table class="table table-responsive col-sm-12">
    <caption>Total number of minutes this week</caption>
    <tr>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.Minutes)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Activity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Timestamp)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td></td>
        <td>
            @Html.DisplayFor(modelItem => item.Minutes)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Activity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Timestamp)
        </td>
        <td class="col-lg-1">
            <div class="btn-group btn-group-sm">
                @Html.ActionLink("View", "Details", new { id = item.ID }, new { @class = "btn btn-default" })
            </div>

        </td>
    </tr>
}

</table>
