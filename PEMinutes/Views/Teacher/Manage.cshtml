@model IEnumerable<PEMinutes.EF.EnteredPeMinute>
@{
    ViewBag.Title = "Manage";
}
@if (Request.IsAuthenticated)
{
    @Html.Partial("~/Views/Shared/_TeacherSidebar.cshtml")

}
<div class="main-panel">
    @if (Request.IsAuthenticated)
    {
        @Html.Partial("~/Views/Shared/_TeacherTopNav.cshtml")
    }
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="card">
                    <div class="content">
                        <div class="header">
                            <h4 class="title">Minutes Over Last 60 Days</h4>
                            <p class="category">
                                You have @ViewBag.CurrentMonthMinuteCount entries totaling @ViewBag.TotalMonthMins minutes.
                            </p>
                        </div>
                        <div class="content table-responsive table-full-width">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Minutes)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Activity)
                                        </th>
                                        <th>
                                            Instruction Time
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td></td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Minutes)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.Activity)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.InstructionTime)
                                        </td>
                                        <td class="col-lg-1">
                                            @Html.ActionLink("View", "Details", new { id = item.ID }, new { @class = "btn btn-info btn-fill" })

                                        </td>
                                    </tr>
                                }
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {

    
    }
