<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/paper-dashboard.css")
    @Styles.Render("~/Content/animate.min.css")
    @Styles.Render("~/Content/themify-icons.css")
    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" rel="stylesheet">
    <link href='https://fonts.googleapis.com/css?family=Muli:400,300' rel='stylesheet' type='text/css'>
</head>
<body>
    <div class="wrapper">

        @if (Request.IsAuthenticated)
        {
            @Html.Partial("_sidebar")
        }
        <div class="main-panel">

            @if (Request.IsAuthenticated)
            {
                @Html.Partial("_navbar")
            }
            <div class="content">
                <div class="container-fluid">
                    <div class="row">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/Scripts/paper-dashboard.js")
        @Scripts.Render("~/Scripts/chartist.min.js")
        @Scripts.Render("~/Scripts/bootstrap-notify.js")
        @Scripts.Render("~/Scripts/bootstrap-checkbox-radio.js")
        @RenderSection("scripts", required: false)
</body>
</html>
